# Voice GenAI Tool - Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development
DEBUG=True

# CORS Configuration
CORS_ORIGINS=http://localhost:80,http://localhost:3000,http://127.0.0.1:80
ALLOW_CREDENTIALS=True
ALLOW_METHODS=*
ALLOW_HEADERS=*

# Logging
LOG_LEVEL=info
LOG_FILE=logs/voice-genai.log

# Model Paths
MODEL_DIR=./models
DATA_DIR=./data
CACHE_DIR=./cache

# Voice Processing Settings
SAMPLE_RATE=16000
MAX_AUDIO_LENGTH=300
AUDIO_FORMAT=wav

# Language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,hi,zh,ja,ar,ru,pt

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
CACHE_ENABLED=True
CACHE_TTL=3600

# Database (if needed)
DATABASE_URL=sqlite:///./voice_genai.db
DATABASE_ECHO=False

# Redis (for caching/queue - optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security
SECRET_KEY=your_secret_key_here_change_in_production
API_KEY_HEADER=X-API-Key
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
